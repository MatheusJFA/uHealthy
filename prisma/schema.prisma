generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  name        String
  email       String
  phone       String
  cpf         String        @unique
  password    String
  birthDate   DateTime
  createdAt   DateTime      @default(now())
  active      Boolean       @default(true)
  vaccination Vaccination[]
  dependents  Dependent[]
}

model Dependent {
  id          Int           @id @default(autoincrement())
  userId      Int
  name        String
  birthDate   DateTime
  createdAt   DateTime      @default(now())
  active      Boolean       @default(true)
  vaccination Vaccination[]
  user        User          @relation(fields: [userId], references: [id])
}

model Vaccination {
  id                  Int        @id @default(autoincrement())
  userId              Int?
  dependentId         Int?
  vaccineName         String
  vaccineType         String
  vaccineManufacturer String?
  vaccineMandatory    Boolean    @default(true)
  vaccineDoses        String[]
  vaccinationLocal    String?
  user                User?      @relation(fields: [userId], references: [id])
  dependents          Dependent? @relation(fields: [dependentId], references: [id])
}
