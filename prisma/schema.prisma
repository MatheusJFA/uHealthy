generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  name        String
  email       String
  phone       String
  cpf         String        @unique
  password    String
  birthDate   DateTime
  createdAt   DateTime      @default(now())
  active      Boolean       @default(true)
  Vaccination Vaccination[]
}

model Vaccine {
  id           Int     @id @default(autoincrement())
  name         String
  type         String
  manufacturer String
  mandatory    Boolean
}

model Vaccination {
  id               Int      @id @default(autoincrement())
  userId           Int
  vaccineId        Int
  vaccinationDate  DateTime @default(now())
  vaccinationLocal String?
  user             User     @relation(fields: [userId], references: [id])
}
